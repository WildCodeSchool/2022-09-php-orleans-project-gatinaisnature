{% extends 'layoutAdmin.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/circuit-index.css">
{% endblock %}

{% block title %}
	{{ parent() }}
	| Éditer Circuits
{% endblock %}

{% block content %}
	<section class="section-form">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col col-xl-10">
					<div class="card shadow-lg">
						<div class="row g-0">
							<div class="col-md-6 col-lg-5 d-block custom-block">
								<img src={{circuit.picture is null ? '/assets/images/imgPlaceHolderCircuit.jpg' : "/uploads/" ~ circuit.picture}} class="w-100 h-100">
							</div>
							<div class="col-md-6 col-lg-7 m-auto d-flex align-items-center">
								<div class="card-body p-4 p-lg-5 text-black">
									{% include "formAdminCircuit.html.twig" with {'title': 'Éditer circuit admin', 'btn': 'Mettre à jour'} %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
