{% extends 'layoutAdmin.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/activity.css">
{% endblock %}

{% block title %}
	{{parent()}}
	| Éditer Activités
{% endblock %}

{% block content %}
	<section class="section-form">
		<div class="container h-100">
			<div class="row justify-content-center align-items-center h-100">
				<div class="col col-xl-10">
					<div class="card shadow-lg vh-100">
						<div class="row g-0">
							<div class="col-md-6 col-lg-5 d-block custom-block">
								<img class="w-100 h-100 rounded" src={{ activity.picture is null ? '/assets/images/imgPlaceHolder.jpg' : "/uploads/" ~ activity.picture }} alt="activityPicture">
							</div>
							<div class="col-md-6 col-lg-7 m-auto d-flex align-items-center">
								<div class="card-body p-4 p-lg-5 text-black">
									{% include "formAdminActivity.html.twig" with {'title': 'Éditer activité admin', 'btn': 'Mettre à jour'} %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}