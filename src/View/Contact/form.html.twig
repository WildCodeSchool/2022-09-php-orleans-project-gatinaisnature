{% extends "layout.html.twig" %}

{% block stylesheet %}
	<link rel="stylesheet" href="/../assets/css/form.css">
{% endblock %}

{% block title %}
	{{parent()}}
	| Contact
{% endblock %}

{% block content %}
	<section class="section-form">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col col-xl-12">
					<h1 class="h2 fw-bold text-center p-4">Formulaire de Contact</h1>
					<div class="card shadow-lg mb-5">
						<div class="row g-0">
							<div class="col-md-6 col-lg-5 d-block custom-block">
								<img class="w-100 h-100" src="/assets/images/imgPlaceHolder.jpg" alt="Image du formulaire">
							</div>
							<div class="col-md-6 col-lg-7 m-auto d-flex align-items-center">
								<div class="card-body p-4 p-lg-5 text-black">

									<form action="" method="post" enctype="multipart/form-data">
										{% if errors %}
											<ul class="alert alert-danger" role="alert">
												{% for error in errors %}
													<li class="list-unstyled">
														<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle-fill" viewbox="0 0 16 16">
															<path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
														</svg>
														{{error}}
													</li>
												{% endfor %}
											</ul>
										{% endif %}
										{% if answer == 'good' %}
											<div class="alert alert-success" role="alert">
												<p class="m-0">
													<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewbox="0 0 16 16">
														<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
													</svg>
													Bravo! Ton message a bien été envoyé.
												</p>
											</div>
										{% endif %}

										<div class="mb-4">
											<label for="lastname" class="form-label">Nom :</label>
											<input type="text" class="form-control form-control-lg" name="lastname" id="lastname" placeholder="Cécile" value="{{contact.lastname ?? ''}}" required>
										</div>

										<div class="mb-4">
											<label for="firstname" class="form-label">Prénom :</label>
											<input type="text" class="form-control form-control-lg" name="firstname" id="firstname" placeholder="Vain" value="{{contact.firstname ?? '' }}" required>
										</div>

										<div class="mb-4">
											<label class="form-label" for="email">Adresse e-mail :</label>
											<input type="email" class="form-control form-control-lg" name="email" id="email" placeholder="cecile.vain@gatinais.fr" value="{{contact.email ?? ''}}" required>
										</div>
										<div class="mb-4">
											<label class="form-label" for="subject">Sujet du message :</label>
											<select class="form-select form-select-lg" name="subject" id="subject" aria-label="Default select example" required>
												<option selected value="1">Question à l'Association</option>
												<option value="2">Adhérer à l'Association</option>
												<option value="3">Oiseaux Blessés</option>
												<option value="4">Nouveaux Circuits</option>
												<option value="5">Nouvelles Espèces</option>
											</select>
										</div>
										<div class="mb-4">
											<label class="form-label" for="message">Message :</label>
											<textarea class="form-control form-control-lg" id="message" name="message" rows="6" placeholder="Je souhaite adhérer à votre association." value="{{contact.message ?? ''}}" required></textarea>
										</div>
										<div class="pt-1 mb-4">
											<button class="btn btn-success btn-lg btn-block" type="submit">Envoyer</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
