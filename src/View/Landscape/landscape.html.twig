{% extends 'layout.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="/assets/css">
{% endblock %}

{% block title %}
	{{parent()}}
	| paysages
{% endblock %}


{% block content %}
<div class="container mt-4">
    <h1 class="text-center p-4">Paysages du Gatinais</h1>
    {% for landscape in landscapes %}
        <div class="activitySection">
            {% if loop.index is even %}
                <div class="card p-0 mb-5">
                    <div class="row">
                        <div class="col-lg-5 m-auto">
                            <img src="/assets/images/{{ landscape.picture_link }}" class="card-img bg-secondary img-fluid rounded-start " alt="riviere">
                        </div>
                        <div class="col-lg-7 m-auto">
                            <h2 class="px-5 py-3 text-center">{{ landscape.title}} </h2>
                            <p class="px-5 py-3">{{ landscape.description}}</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="card p-0 mb-5">
                    <div class="row">
                        <div class="col-lg-7 m-auto">
                            <h2 class="px-5 py-3 text-center">{{ landscape.title}}</h2>
                            <p class="px-5 py-3">{{ landscape.description}}</p>
                        </div>
                        <div class="col-lg-5 m-auto">
                            <img src="/assets/images/{{ landscape.picture_link }}" class="card-img bg-secondary img-fluid rounded-start " alt="riviere">
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>
{% endblock %}